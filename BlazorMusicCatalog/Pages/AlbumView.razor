@page "/albumview/{id:int}"
@inject IAlbumServices AlbumService


@if (album == null )
{
  <p><em>Loading......</em></p>
}
else
{
   <div class="container">
       <div class ="row flow-offset-1">
          <div class="col-md-4">
          
          </div>
          <div class="col-md-4">
              <img src="data:image/png;base64,@(Convert.ToBase64String(album.CoverImage))" />
              <h1 class="text-muted">@album.Title</h1>         
          </div>
       </div>
   </div> 
    <br />
    <br />
    <br />

    @foreach (var song in album.Songs)
    {
          <div class ="row flow-offset-1">
          <div class="col-md-4">
              <span> @song.Name </span>
          </div>
          <div class="col-md-4">
              <audio controls = "controls" id="@song.Id" src="/songs/@(song.Path)"></audio>       
          </div>
       </div>
    }
}

@code {

    [Parameter]
    public int id { get; set; }

    Album album;

    protected async override Task OnInitializedAsync()
    {
        if (id > 0)
            album = await AlbumService.GetAlbumDetails(id);
    }

}
